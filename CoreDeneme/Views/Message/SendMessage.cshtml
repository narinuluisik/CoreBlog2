@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h2>Yeni Mesaj Gönder</h2>

<form asp-action="SendMessage" method="post">
    <div class="form-group">
        <label>Alıcı E-posta:</label>
        <input type="text" name="receiverEmail" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Konu:</label>
        <input asp-for="Subject" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Mesaj İçeriği:</label>
        <textarea asp-for="MessageDetails" class="form-control" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>