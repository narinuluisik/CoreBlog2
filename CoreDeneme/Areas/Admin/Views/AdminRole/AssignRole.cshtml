@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form>
    @for (int i=0; i<Model.Count;i++)
    {
        <div class="form-checl">
            <input type ="hidden" asp-for="@Model[i].RoleID">
            <input type ="hidden" asp-for="@Model[i].Name">
            <input type ="checkbox" asp-for="@Model[i].Exists" clas="form-check-input">
            <label class ="form-check-label" asp-for="@Model[i].Exists" >@Model[i].Name</label>
        </div>

        <button class="btn btn-info"> Değişiklikleri Kaydet</button>
    }
    <a href="/Admin/AdminRole/UserRoleList/" class="btn-btn-primay">Kullanıcı Listesine Dön</a>

</form>

